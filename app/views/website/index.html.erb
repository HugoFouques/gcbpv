<% content_for(:page_class, "home ") %>
<% content_for(:page_title, "Groupement Culturel Breton des Pays de Vilaine") %>

<section class="categories feature">
  <%= render Website::HeroCard::Component.new(title: "La Bogue", url: bogue_path, css_classes: "bogue") %>
  <%= render Website::HeroCard::Component.new(title: "L'école de musique traditionnelle", url: ecole_path, css_classes: "ecole") %>
  <%= render Website::HeroCard::Component.new(title: "Archives", url: archives_path, css_classes: "archives") %>
</section>

<div class="feature grid" data-grid="3-2">
  <section class="latest-posts">
    <header>
      <h2>Dernières actualités</h2>
      <%= link_to "↬ Voir tous articles", posts_path %>
    </header>
    <div class="list">
      <%= render Website::PostPreview::Component.with_collection(@posts, tag: "h3") %>
    </div>
  </section>
  <section class="upcoming-events">
    <header>
      <h2>Événements à venir</h2>
      <%= link_to "↬ Voir tous les événements", events_path %>
    </header>
    <div class="list">
      <%= render Website::Card::Event::Component.with_collection(@events) %>
    </div>
  </section>
</div>

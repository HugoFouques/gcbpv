<% content_for(:page_class, "home ") %>
<% content_for(:page_title, "Groupement Culturel Breton des Pays de Vilaine") %>

<section class="categories full">
  <%= render Website::HeroCard::Component.new(title: "La Bogue", url: "", css_classes: "bogue") %>
  <%= render Website::HeroCard::Component.new(title: "L'école de musique traditionnelle", url: "", css_classes: "ecole") %>
  <%= render Website::HeroCard::Component.new(title: "Archives", url: "", css_classes: "archives") %>
</section>

<section class="upcoming-events feature">
  <div class="section-header">
    <h2>Événements à venir</h2>
    <%= link_to "↬ Voir tous les événements", events_path %>
  </div>
  <% @events.each do |event| %>
    <div class="event">
      <%= image_tag event.image if event.image.present? %>
      <div class="event-info">
        <h3><%= event.name %></h3>
        <p><%= event.date %></p>
      </div>
    </div>
  <% end %>
</section>

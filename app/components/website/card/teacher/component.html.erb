<%= link_to ecole_teacher_path(@teacher), class: "card" do %>
  <%= image_tag @teacher.photo if @teacher.photo.present? %>
  <div class="card-info">
    <h3><%= @teacher.name %></h3>
    <div class="tag-list">
      <% @teacher.instruments.each do |instrument| %>
        <span class="tag">
          <span><%= instrument.name %></span>
        </span>
      <% end %>
      <% @teacher.cities.uniq.each do |city| %>
        <span class="tag" data-tag-color="dark">
          <span><%= city.name %></span>
        </span>
      <% end %>
    </div>
  </div>
<% end %>

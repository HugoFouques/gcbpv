<post-preview>
  <% if @post.categories.present? %>
    <div class="tag-list">
      <% @post.categories.each do |category| %>
        <%= link_to "", class: "tag" do %>
          <span><%= category.name %></span>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <%= link_to post_path(@post), class: "post-title" do %>
    <%= tag.send(@tag) do %>
      <%= @post.title %>
    <% end %>
    <time>Publi√© le <%= @post.publication_datetime %></time>
    <% if @post.image.present? %>
      <div class="image">
        <%= image_tag @post.image %>
      </div>
    <% end %>
    <%= stripped_content %>
  <% end %>
</post-preview>
